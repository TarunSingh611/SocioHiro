# ========================================
# SOCIOHIRO FRONTEND ENVIRONMENT VARIABLES
# ========================================

# ========================================
# API CONFIGURATION
# ========================================
# Backend API URL - Change this for production
# For local development: http://localhost:8080
# For ngrok testing: https://your-ngrok-url.ngrok-free.app
VITE_API_URL=https://cicada-proud-utterly.ngrok-free.app

# ========================================
# APP CONFIGURATION
# ========================================
# App name and version
VITE_APP_NAME=SocioHiro
VITE_APP_VERSION=1.0.0

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features for development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# ========================================
# THIRD PARTY INTEGRATIONS (OPTIONAL)
# ========================================
# Google Analytics ID
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Sentry for error tracking
VITE_SENTRY_DSN=your_sentry_dsn

# ========================================
# SOCIAL MEDIA PLATFORMS
# ========================================
# Instagram OAuth URL
VITE_INSTAGRAM_AUTH_URL=http://localhost:8080/api/auth/instagram

# Facebook OAuth URL (for future use)
VITE_FACEBOOK_AUTH_URL=http://localhost:8080/api/auth/facebook

# ========================================
# FILE UPLOAD
# ========================================
# Maximum file size for uploads (in MB)
VITE_MAX_FILE_SIZE=5

# ========================================
# UI CONFIGURATION
# ========================================
# Theme configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# ========================================
# DEVELOPMENT TOOLS
# ========================================
# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API for development
VITE_USE_MOCK_API=false 