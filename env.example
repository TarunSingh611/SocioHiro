# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/instagramstore

# Session and Security
SESSION_SECRET=your-super-secret-session-key
JWT_SECRET=your-jwt-secret-key

# Instagram API Configuration
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_CALLBACK_URL=https://your-app.vercel.app/api/auth/instagram/callback

# Frontend Configuration
FRONTEND_URL=https://your-app.vercel.app
VITE_API_URL=https://your-app.vercel.app

# Server Configuration
PORT=5000
NODE_ENV=production

# Optional: Additional Instagram Settings
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
INSTAGRAM_WEBHOOK_URL=https://your-app.vercel.app/api/webhooks/instagram

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn 