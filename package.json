{
  "name": "sociohiro",
  "version": "1.0.0",
  "description": "SocioHiro - Social Media Management Platform",
  "main": "index.js",
  "scripts": {
    "dev": "node debug-start.js",
    "dev:windows": "debug-start.bat",
    "dev:powershell": "powershell -ExecutionPolicy Bypass -File debug-start.ps1",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "debug:frontend": "cd frontend && npm run dev:debug",
    "debug:backend": "cd backend && npm run debug",
    "debug:backend:break": "cd backend && npm run debug:break",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:full": "cd frontend && npm install && npm run build",
    "start": "cd backend && npm start",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "start:full": "npm run build:full && cd backend && npm start",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm test",
    "lint": "cd frontend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/node_modules node_modules",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "cd backend && rm -rf node_modules",
    "vercel-build": "npm run build:frontend",
    "vercel-dev": "npm run dev:frontend"
  },
  "keywords": [
    "instagram",
    "social-media",
    "management",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "automation",
    "analytics",
    "campaigns",
    "content-management"
  ],
  "author": "SocioHiro Team",
  "license": "MIT",
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sociohiro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sociohiro/issues"
  },
  "homepage": "https://github.com/yourusername/sociohiro#readme"
}
